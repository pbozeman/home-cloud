{
  inputs.nixpkgs.url = "nixpkgs/nixos-unstable";

  outputs = { nixpkgs, ... }: {
    %{ for host in hosts ~}
    nixosConfigurations.${host} = let
      hostname = "${host}";
    in nixpkgs.lib.nixosSystem {
      system = "x86_64-linux";
      specialArgs = {
        inherit hostname;
      };
      modules = [
        ./nas.nix
      ];
    };
    %{ endfor ~}
  };
}
